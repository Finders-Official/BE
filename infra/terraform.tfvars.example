# Copy this file to terraform.tfvars and fill in actual values
# terraform.tfvars is gitignored - never commit secrets!

# =============================================================================
# GCP Core
# =============================================================================
project_id = "your-gcp-project-id"
region     = "asia-northeast3"
zone       = "asia-northeast3-a"

# =============================================================================
# Cloudflare
# =============================================================================
cloudflare_api_token       = "your-cloudflare-api-token"
cloudflare_account_id      = "your-cloudflare-account-id"
cloudflare_tunnel_hostname = "your-api.example.com"
cloudflare_tunnel_service  = "http://localhost:8080"

# =============================================================================
# Compute
# =============================================================================
compute_sa_email = "PROJECT_NUMBER-compute@developer.gserviceaccount.com"

# =============================================================================
# IAM
# =============================================================================
admin_member_emails = [
  "admin@example.com",
]

team_member_emails = [
  "member1@example.com",
  "member2@example.com",
]

# =============================================================================
# GCS
# =============================================================================
cors_allowed_origins = [
  "https://your-frontend-domain.com",
  "http://localhost:3000",
]
