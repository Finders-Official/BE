# Copy this file to terraform.tfvars and fill in actual values
# terraform.tfvars is gitignored - never commit secrets!

project_id = "your-gcp-project-id"
region     = "asia-northeast3"
zone       = "asia-northeast3-a"

# Cloudflare (required for Phase 5)
cloudflare_api_token  = "your-cloudflare-api-token"
cloudflare_account_id = "your-cloudflare-account-id"

# Compute Engine default service account
compute_sa_email = "PROJECT_NUMBER-compute@developer.gserviceaccount.com"

# Admin emails (roles/editor + logging + monitoring + SA impersonation)
admin_member_emails = [
  "admin@example.com"
]

# Team member emails (logging + monitoring + IAP + compute + SA impersonation)
team_member_emails = [
  "member1@example.com",
  "member2@example.com"
]

# Photo team members (additional GCS viewer access)
photo_team_member_emails = [
  "photo-member@example.com"
]
